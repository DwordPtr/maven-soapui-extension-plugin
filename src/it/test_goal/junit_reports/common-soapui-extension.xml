<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>soapui.extension</groupId>
    <artifactId>test-goal</artifactId>
    <version>@project.version@</version>
    <relativePath>../common.xml</relativePath>
  </parent>
  <artifactId>test-junit-report-improvements-common</artifactId>
  <packaging>pom</packaging>

  <properties>
    <soapui_report_output_directory>${project.build.directory}/soapui/test-reports</soapui_report_output_directory>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>@project.groupId@</groupId>
          <artifactId>@project.artifactId@</artifactId>
          <version>@project.version@</version>
          <configuration>
            <exportAll>true</exportAll>
            <junitReport>true</junitReport>
            <outputFolder>${soapui_report_output_directory}</outputFolder>
            <settingsFile>${soapui.settings.empty.file.path}</settingsFile>
            <soapuiProperties>
              <property>
                <name>soapui.junit.reportCollector</name>
                <value>com.eviware.soapui.report.StepInfoJUnitReportCollector</value>
              </property>
            </soapuiProperties>
            <testFailIgnore>true</testFailIgnore>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>1.7</version>
          <dependencies>
            <dependency>
              <groupId>org.apache.ant</groupId>
              <artifactId>ant-junit</artifactId>
              <version>1.8.2</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-report-plugin</artifactId>
          <version>2.17</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
